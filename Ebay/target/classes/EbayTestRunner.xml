<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Ebay Automation Script " parallel="false">

    <parameter name="useCloudEnv" value="false"/>
    <parameter name="cloudEnvName" value="browserstack"/>
    <parameter name="os" value="linux"/>
    <parameter name="os_version" value="linux"/>
    <parameter name="browserName" value="chrome"/>
    <parameter name="browserVersion" value="73.0"/>
    <parameter name="url" value="https://www.ebay.com"/>

    <test name = "EbayTestRunner">
        <classes>
            <class name="HomePage.TestSearchEbay"/>
            <class name="HomePage.TestPageElement"/>
            <class name="HomePage.RegisterUser"/>
            <class name="HomePage.SignInUser"/>
            <class name="DataReader.TestExcelSearch"/>
            <class name="DataSource.TestSearchPage"/>
            <class name="EbayElectronics.TestShopByCategory"/>
            <class name="EbayElectronics.ShopElectronics"/>
            <class name="EbayFashion.TestCategory"/>
            <class name="EbayFashion.ExploreInterests"/>
            <class name="EbayFashion.SalesEvents"/>
            <class name="EbayFashion.SellOnEbay"/>
            <class name="EbayFashion.TestTopBrands"/>
            <class name="EbayMenu.TestReadDropDown"/>
            <class name="EbayMotors.TestEbayMotors"/>
      </classes>
    </test>

</suite>